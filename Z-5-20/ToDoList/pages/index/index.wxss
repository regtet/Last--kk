  page {
    background: #e9e9e9;
    width: 100%;
    height: 100%;
  }

  .top {
    display: flex;
    justify-content: space-between;
    background: #000;
    color: #ffffff;
    padding: 20rpx;
  }

  input {
    background: #fff;
    border-radius: 8rpx;
    color: #000;
    width: 70%;
    font-size: 30rpx;
    padding-left: 13rpx;
  }

  .content {
    background: #fff;
    margin: 30rpx 0;
    padding: 20rpx 30rpx;

  }

  .tops {
    background: #fff;
    padding: 20rpx;
    color: #000;
    display: flex;
    justify-content: space-between;

  }

  .num {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background-color: #000;
    text-align: center;
    line-height: 50rpx;
    color: #fff;
  }

  .li {
    margin: 30rpx 0;
  }

  .li text {
    float: right;
  }